{
  "expo": {
    "name": "DSober",
    "slug": "DSober",
    "version": "1.0.0",
    "orientation": "portrait",
    "projectId": "a1b2c3d4-e5f6-7890-abcd-ef1234567890",
    "icon": "./assets/dsober_logo.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/dsober_logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "notification": {
      "icon": "./assets/notification-icon.png",
      "color": "#FF6B35",
      "androidMode": "default",
      "androidCollapsedTitle": "DSober"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yousifabuhaija.DSober",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "This app needs access to your microphone to record audio for sobriety verification.",
        "NSCameraUsageDescription": "This app needs access to your camera to take photos for sobriety verification.",
        "NSPhotoLibraryUsageDescription": "This app needs access to your photo library to upload your driver's license.",
        "UIBackgroundModes": [
          "remote-notification",
          "remote-notification"
        ],
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/dsober_logo.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "useNextNotificationsApi": true,
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS",
        "android.permission.CAMERA",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-audio",
        {
          "microphonePermission": "Allow DSober to access your microphone for sobriety verification."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow DSober to access your camera for sobriety verification."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow DSober to access your photos to upload your driver's license."
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow DSober to use your location to find nearby designated drivers."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#FF6B35",
          "sounds": []
        }
      ]
    ],
